extends category_sidebar 

block content
  h1= title 
  
  form(method="POST") 
    div
      label(for='name') Name 
      input#name(name='name' required value=(category === undefined ? '' : category.name))
    div
      label(for='description') Description 
      input#description(name='description' value=(category !== undefined ? category.description : ''))
    button.submit-btn(type='submit') Submit
  
  if errors 
    ul 
      each error in errors 
        li= error.msg